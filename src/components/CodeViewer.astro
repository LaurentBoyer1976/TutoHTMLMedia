---
interface Props {
  code: string;
  titre: string;
  penId?: string; // ID du CodePen si disponible
}

const { code, titre, penId } = Astro.props;

// Cr√©er un ID unique pour l'iframe
const iframeId = `preview-${Math.random().toString(36).substring(7)}`;
---

<div class="code-viewer">
  <h4 class="viewer-title">{titre}</h4>
  
  {penId ? (
    <!-- CodePen Embed uniquement -->
    <div class="codepen-container">
      <p 
        class="codepen" 
        data-height="500" 
        data-default-tab="html,result" 
        data-slug-hash={penId}
        data-user="laurent-Boyer"
        data-editable="true"
      >
        <span>See the Pen <a href={`https://codepen.io/laurent-Boyer/pen/${penId}`}>
        {titre}</a> by Laurent Boyer (<a href="https://codepen.io/laurent-Boyer">@laurent-Boyer</a>)
        on <a href="https://codepen.io">CodePen</a>.</span>
      </p>
    </div>
  ) : (
    <!-- Vue c√¥te √† c√¥te pour aper√ßu local -->
    <div class="viewer-container">
      <!-- Panneau Code -->
      <div class="code-panel">
        <div class="panel-header">
          <span class="panel-icon">üìù</span>
          <span class="panel-title">Code Source</span>
        </div>
        <pre class="code-content"><code>{code}</code></pre>
      </div>

      <!-- Panneau Aper√ßu -->
      <div class="preview-panel">
        <div class="panel-header">
          <span class="panel-icon">üëÅÔ∏è</span>
          <span class="panel-title">Aper√ßu en direct</span>
        </div>
        <div class="preview-content">
          <iframe
            id={iframeId}
            title={`Aper√ßu: ${titre}`}
            loading="lazy"
            class="preview-iframe"
          ></iframe>
        </div>
      </div>
    </div>
  )}

  <!-- Code Source dans une section d√©tachable -->
  <details class="code-source-section">
    <summary>
      <span class="icon">üìÑ</span>
      <span>Voir le code source complet</span>
    </summary>
    <div class="code-source-content">
      <pre><code>{code}</code></pre>
    </div>
  </details>

  <!-- Liens d'action -->
  <div class="viewer-actions">
    {!penId && (
      <button class="action-button toggle-view" data-mode="vertical">
        <span class="icon">‚áÑ</span>
        <span>Vue horizontale</span>
      </button>
    )}
    {penId ? (
      <a 
        href={`https://codepen.io/laurent-Boyer/pen/${penId}`}
        target="_blank" 
        rel="noopener noreferrer"
        class="action-button codepen-link"
      >
        <span class="icon">üöÄ</span>
        <span>√âditer sur CodePen</span>
      </a>
    ) : (
      <a 
        href={`https://codepen.io/pen/editor/`}
        target="_blank" 
        rel="noopener noreferrer"
        class="action-button codepen-link"
      >
        <span class="icon">üöÄ</span>
        <span>Cr√©er sur CodePen</span>
      </a>
    )}
  </div>
</div>

{!penId && (
  <script is:inline define:vars={{ iframeId: iframeId, code }}>
    {
      // @ts-ignore
      const iframe = document.getElementById(iframeId);
      if (iframe) {
        const htmlContent = `
