<script>
  // Gestion du toggle vertical/horizontal
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButtons = document.querySelectorAll('.toggle-view');
    
    toggleButtons.forEach(button => {
      button.addEventListener('click', () => {
        const viewer = button.closest('.code-viewer');
        const container = viewer?.querySelector('.viewer-container');
        const currentMode = button.getAttribute('data-mode');
        
        if (container) {
          if (currentMode === 'vertical') {
            container.classList.add('horizontal');
            button.setAttribute('data-mode', 'horizontal');
            button.querySelector('span:last-child')!.textContent = 'Vue verticale';
          } else {
            container.classList.remove('horizontal');
            button.setAttribute('data-mode', 'vertical');
            button.querySelector('span:last-child')!.textContent = 'Vue horizontale';
          }
        }
      });
    });
  });
</script>

