<Layout title="D√©mo Webcam - API getUserMedia()">
    <main class="demo-container">
        <header class="demo-header">
            <h1>üé• D√©monstration : Acc√®s √† la Webcam</h1>
            <p class="subtitle">Exemple pratique de l'API MediaDevices.getUserMedia()</p>
            <div class="alert alert-warning">
                ‚ö†Ô∏è Cette fonctionnalit√© n√©cessite HTTPS ou localhost et votre autorisation.
            </div>
        </header>

        <section class="webcam-section">
            <div class="webcam-container">
                <video id="webcam" autoplay playsinline muted></video>
                <canvas id="photo-canvas" style="display: none;"></canvas>
            </div>

            <div class="controls">
                <button id="btn-start" class="btn btn-success">
                    <span>üìπ</span> D√©marrer la cam√©ra
                </button>
                <button id="btn-stop" class="btn btn-danger" disabled>
                    <span>‚èπÔ∏è</span> Arr√™ter
                </button>
                <button id="btn-capture" class="btn btn-primary" disabled>
                    <span>üì∏</span> Capturer une photo
                </button>
            </div>

            <div id="status" class="status-message"></div>
        </section>

        <section class="photos-section">
            <h2>üì∑ Photos captur√©es</h2>
            <div id="photos-gallery" class="photos-gallery"></div>
        </section>

        <section class="info-section">
            <h2>‚ÑπÔ∏è √Ä propos de cette d√©mo</h2>
            <ul>
                <li>Utilise l'API <code>navigator.mediaDevices.getUserMedia()</code></li>
                <li>Affiche le flux vid√©o en temps r√©el dans un √©l√©ment <code>&lt;video&gt;</code></li>
                <li>Capture des images via un √©l√©ment <code>&lt;canvas&gt;</code></li>
                <li>Permet de t√©l√©charger les photos captur√©es</li>
            </ul>
            
            <div class="code-note">
                <strong>üí° Note technique :</strong> Le flux vid√©o reste enti√®rement dans votre navigateur.
                Aucune donn√©e n'est envoy√©e sur internet.
            </div>
        </section>

        <nav class="demo-nav">
            <a href="/api/getUserMedia" class="btn btn-link">üìñ Voir la documentation compl√®te</a>
            <a href="/" class="btn btn-link">üè† Retour √† l'accueil</a>
        </nav>
    </main>
</Layout>

<script>
    const video = document.getElementById('webcam') as HTMLVideoElement;
    const photoCanvas = document.getElementById('photo-canvas') as HTMLCanvasElement;
    const btnStart = document.getElementById('btn-start') as HTMLButtonElement;
    const btnStop = document.getElementById('btn-stop') as HTMLButtonElement;
    const btnCapture = document.getElementById('btn-capture') as HTMLButtonElement;
    const statusDiv = document.getElementById('status') as HTMLDivElement;
    const photosGallery = document.getElementById('photos-gallery') as HTMLDivElement;
    
    let stream: MediaStream | null = null;
    let photoCount = 0;

    function updateStatus(message: string, type: 'info' | 'success' | 'error' = 'info') {
        statusDiv.textContent = message;
        statusDiv.className = `status-message status-${type}`;
        setTimeout(() => {
            statusDiv.className = 'status-message';
        }, 3000);
    }

    // V√©rifier le support de l'API
    if (!navigator.mediaDevices || !navigator.mediaDevices.getUserMedia) {
        updateStatus('‚ùå Votre navigateur ne supporte pas getUserMedia', 'error');
        btnStart.disabled = true;
    }

    // D√©marrer la webcam
    btnStart.addEventListener('click', async () => {
        try {
            updateStatus('‚è≥ Demande d\'acc√®s √† la cam√©ra...', 'info');
            
            stream = await navigator.mediaDevices.getUserMedia({ 
                video: {
                    width: { ideal: 1280 },
                    height: { ideal: 720 }
                }
            });
            
            video.srcObject = stream;
            
            btnStart.disabled = true;
            btnStop.disabled = false;
            btnCapture.disabled = false;
            
            updateStatus('‚úÖ Cam√©ra activ√©e avec succ√®s !', 'success');
            
        } catch (error: any) {
            console.error('Erreur:', error);
            let errorMessage = '‚ùå Erreur: ';
            
            switch(error.name) {
                case 'NotAllowedError':
                    errorMessage += 'Permission refus√©e. Autorisez l\'acc√®s √† la cam√©ra.';
                    break;
                case 'NotFoundError':
                    errorMessage += 'Aucune cam√©ra trouv√©e.';
                    break;
                case 'NotReadableError':
                    errorMessage += 'Cam√©ra d√©j√† utilis√©e par une autre application.';
                    break;
                case 'SecurityError':
                    errorMessage += 'Erreur de s√©curit√© (HTTPS requis en production).';
                    break;
                default:
                    errorMessage += error.message || 'Erreur inconnue';
            }
            
            updateStatus(errorMessage, 'error');
        }
    });

    // Arr√™ter la webcam
    btnStop.addEventListener('click', () => {
        if (stream) {
            stream.getTracks().forEach(track => {
                track.stop();
                console.log(`Piste ${track.kind} arr√™t√©e`);
            });
            
            video.srcObject = null;
            stream = null;
            
            btnStart.disabled = false;
            btnStop.disabled = true;
            btnCapture.disabled = true;
            
            updateStatus('üõë Cam√©ra arr√™t√©e', 'info');
        }
    });

    // Capturer une photo
    btnCapture.addEventListener('click', () => {
        if (!stream) return;
        
        // Configurer le canvas aux dimensions de la vid√©o
        photoCanvas.width = video.videoWidth;
        photoCanvas.height = video.videoHeight;
        
        // Dessiner l'image actuelle
        const ctx = photoCanvas.getContext('2d');
        if (!ctx) return;
        
        ctx.drawImage(video, 0, 0);
        
        // Convertir en image
        const imageUrl = photoCanvas.toDataURL('image/png');
        photoCount++;
        
        // Cr√©er l'√©l√©ment de galerie
        const photoItem = document.createElement('div');
        photoItem.className = 'photo-item';
        
        const img = document.createElement('img');
        img.src = imageUrl;
        img.alt = `Photo ${photoCount}`;
        
        const downloadLink = document.createElement('a');
        downloadLink.href = imageUrl;
        downloadLink.download = `webcam_photo_${Date.now()}.png`;
        downloadLink.className = 'btn btn-download';
        downloadLink.innerHTML = '‚¨áÔ∏è T√©l√©charger';
        
        const deleteBtn = document.createElement('button');
        deleteBtn.className = 'btn btn-delete';
        deleteBtn.innerHTML = 'üóëÔ∏è Supprimer';
        deleteBtn.onclick = () => photoItem.remove();
        
        const buttonGroup = document.createElement('div');
        buttonGroup.className = 'photo-actions';
        buttonGroup.appendChild(downloadLink);
        buttonGroup.appendChild(deleteBtn);
        
        photoItem.appendChild(img);
        photoItem.appendChild(buttonGroup);
        
        photosGallery.prepend(photoItem);
        
        updateStatus(`üì∏ Photo ${photoCount} captur√©e !`, 'success');
    });

    // Nettoyer lors de la fermeture de la page
    window.addEventListener('beforeunload', () => {
        if (stream) {
            stream.getTracks().forEach(track => track.stop());
        }
    });
</script>

<style>
