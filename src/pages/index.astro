<style>
  .home-main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 3rem;
    padding: 3rem 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 1rem;
    color: white;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.2rem;
    opacity: 0.9;
    margin: 0.5rem 0;
  }

  .hero-subtitle {
    font-size: 1rem;
    opacity: 0.8;
    font-style: italic;
  }

  .content-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2rem;
    color: #667eea;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: #888;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .badge-optional {
    background-color: #ffd93d;
    color: #333;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .api-section {
    background: linear-gradient(135deg, rgba(255,107,107,0.05) 0%, rgba(102,126,234,0.05) 100%);
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid rgba(255,107,107,0.2);
  }

  .elements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .api-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .element-card,
  .api-card {
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 0.5rem;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .element-card:hover {
    transform: translateY(-5px);
    border-color: #667eea;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
  }

  .api-card {
    border: 2px solid #ff6b6b;
    position: relative;
  }

  .api-card:hover {
    transform: translateY(-5px);
    border-color: #ff6b6b;
    box-shadow: 0 10px 30px rgba(255, 107, 107, 0.4);
  }

  .demo-card {
    border-color: #28a745;
  }

  .demo-card:hover {
    border-color: #28a745;
    box-shadow: 0 10px 30px rgba(40, 167, 69, 0.4);
  }

  .element-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .element-card h3,
  .api-card h3 {
    font-size: 1.5rem;
    color: #667eea;
    margin: 0;
    font-family: 'Courier New', monospace;
  }

  .api-card h3 {
    color: #ff6b6b;
    font-family: inherit;
  }

  .demo-card h3 {
    color: #28a745;
  }

  .api-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .element-section {
    font-size: 0.8rem;
    color: #888;
    background: #2a2a2a;
    padding: 0.3rem 0.6rem;
    border-radius: 0.3rem;
  }

  .element-description,
  .api-card p {
    flex: 1;
    color: #ccc;
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  .api-features {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .feature-tag {
    font-size: 0.75rem;
    background: rgba(255, 107, 107, 0.2);
    color: #ff6b6b;
    padding: 0.25rem 0.5rem;
    border-radius: 8px;
    font-weight: 600;
  }

  .feature-tag.demo {
    background: rgba(40, 167, 69, 0.2);
    color: #28a745;
  }

  .element-link {
    color: #667eea;
    font-weight: 500;
    margin-top: auto;
    display: inline-block;
  }

  .api-card .element-link {
    color: #ff6b6b;
  }

  .demo-card .element-link {
    color: #28a745;
  }

  .quick-links {
    text-align: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #333;
  }

  .quick-link-btn {
    display: inline-block;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .quick-link-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .api-grid {
      grid-template-columns: 1fr;
    }

    .section-subtitle {
      font-size: 1rem;
    }
  }

  @media (prefers-color-scheme: light) {
    .element-card,
    .api-card {
      background: #f9f9f9;
      border-color: #ddd;
    }

    .element-card:hover {
      border-color: #667eea;
      box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }

    .api-card {
      border-color: #ff6b6b;
    }

    .api-card:hover {
      box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
    }

    .demo-card {
      border-color: #28a745;
    }

    .demo-card:hover {
      box-shadow: 0 10px 30px rgba(40, 167, 69, 0.3);
    }

    .element-section {
      background: #e9e9e9;
      color: #666;
    }

    .element-description,
    .api-card p {
      color: #333;
    }

    .quick-links {
      border-top-color: #ddd;
    }

    .api-section {
      background: linear-gradient(135deg, rgba(255,107,107,0.08) 0%, rgba(102,126,234,0.08) 100%);
    }
  }
</style>
