    }

    .gemini-card {
      background: linear-gradient(135deg, rgba(76, 175, 80, 0.08) 0%, transparent 100%);
    }

    .html5-card {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, transparent 100%);
    }

    .definition-card h3 {
      color: #333;
    }

    .definition-text {
      color: #555;
    }

    .definition-source {
      color: #777;
    }

    .definition-notes {
      background: rgba(255, 152, 0, 0.08);
      color: #666;
      border-left-color: #ff9800;
    }

    .definition-etymologie {
