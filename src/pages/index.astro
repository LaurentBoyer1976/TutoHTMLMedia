                  {definitionContent.definitions.gemini.exemples && (
                    <div class="definition-exemples">
                      <h4>Exemples :</h4>
                      <ul>
                        {definitionContent.definitions.gemini.exemples.map((exemple: string) => (
                          <li>{exemple}</li>
                        ))}
                      </ul>
                    </div>
                  )}
                  {definitionContent.definitions.gemini.etymologie && (
                    <p class="definition-etymologie">
                      <em>√âtymologie : {definitionContent.definitions.gemini.etymologie}</em>
                    </p>
                  )}
                </div>
              )}
              
              {definitionContent.definitions.html5 && (
                <div class="definition-card html5-card">
                  <div class="definition-source">üè∑Ô∏è En HTML5</div>
                  <h3>{definitionContent.definitions.html5.type}</h3>
                  <p class="definition-text">{definitionContent.definitions.html5.definition}</p>
                  {definitionContent.definitions.html5.exemples && (
                    <div class="definition-exemples">
                      <h4>Types de m√©dias HTML5 :</h4>
                      <ul>
                        {definitionContent.definitions.html5.exemples.map((exemple: string) => (
                          <li>{exemple}</li>
