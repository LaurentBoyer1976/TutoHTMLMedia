      border-top-color: rgba(0, 0, 0, 0.1);
    }

    .definition-resume {
      background: rgba(102, 126, 234, 0.08);
      color: #555;
      border-left-color: #667eea;
    }

    .definition-exemples h4 {
      color: #333;
    }

    .definition-exemples li {
      color: #666;
    }

    .definition-card:hover {
      box-shadow: 0 10px 30px rgba(102, 126, 234, 0.15);
    }

    .definition-cta {
      background: rgba(102, 126, 234, 0.12);
      border-left-color: #667eea;
    }

    .definition-cta p {
      color: #555;
    }

    .definition-cta a {
      color: #667eea;
    }

    .definition-cta a:hover {
      color: #764ba2;
    }
  }
</style>
