---
import Layout from '../layouts/Layout.astro';
import '../Styles/style.css';
import elementsData from '../datas/Json/datas.json';

const elements = elementsData.elements || [];
const definitions = elementsData.definition || [];
const definitionContent = definitions.find((def: any) => def.id === 'multimediaRoleInModernWebSite');
---

<Layout title="Tutoriel HTML Media - Accueil">
  <main class="home-main">
    <section class="hero">
